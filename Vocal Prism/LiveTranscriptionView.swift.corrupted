import Foundation
import AVFoundation
import Combine

class AudioRecorder: NSObject, ObservableObject {
    @Published var isRecording = false
    @Published var recordingDuration: TimeInterval = 0
    @Published var audioLevel: Float = 0.0
    @Published var error: String?
    
    private var audioRecorder: AVAudioRecorder?
    private var recordingTimer: Timer?
    private var levelTimer: Timer?
    private var recordingURL: URL?
    
    func requestMicrophonePermission(completion: @escaping (Bool) -> Void) {
        // macOS microphone permission check
        switch AVCaptureDevice.authorizationStatus(for: .audio) {
        case .authorized:
            print("‚úÖ [AudioRecorder] Microphone permission already granted")
            completion(true)
        case .notDetermined:
            AVCaptureDevice.requestAccess(for: .audio) { granted in
                DispatchQueue.main.async {
                    if granted {
                        print("‚úÖ [AudioRecorder] Microphone permission granted")
                    } else {
                        print("‚ùå [AudioRecorder] Microphone permission denied")
                        self.error = "Microphone permission denied"
                    }
                    completion(granted)
                }
            }
        case .denied, .restricted:
            print("‚ùå [AudioRecorder] Microphone permission denied or restricted")
            self.error = "Microphone access denied. Enable in System Settings ‚Üí Privacy & Security ‚Üí Microphone"
            completion(false)
        @unknown default:
            completion(false)
        }
    }
    
    func startRecording() -> URL? {
        print("üé§ [AudioRecorder] Starting recording...")
        
        // Create temporary file for recording
        let tempDir = FileManager.default.temporaryDirectory
        let filename = "recording_\(Date().timeIntervalSince1970).wav"
        let url = tempDir.appendingPathComponent(filename)
        
        print("üìÅ [AudioRecorder] Recording to: \(url.path)")
        
        // Configure audio settings optimized for Whisper (16kHz, mono, PCM)
        let settings: [String: Any] = [
            AVFormatIDKey: Int(kAudioFormatLinearPCM),
            AVSampleRateKey: 16000.0,  // Whisper expects 16kHz
            AVNumberOfChannelsKey: 1,   // Mono
            AVLinearPCMBitDepthKey: 16,
            AVLinearPCMIsBigEndianKey: false,
            AVLinearPCMIsFloatKey: false,
            AVEncoderAudioQualityKey: AVAudioQuality.high.rawValue
        ]
        
        do {
            audioRecorder = try AVAudioRecorder(url: url, settings: settings)
            audioRecorder?.delegate = self
            audioRecorder?.isMeteringEnabled = true
            
            if audioRecorder?.record() == true {
                isRecording = true
                recordingURL = url
                recordingDuration = 0
                
                // Start duration timer
                recordingTimer = Timer.scheduledTimer(withTimeInterval: 0.1, repeats: true) { [weak self] _ in
                    guard let self = self, let recorder = self.audioRecorder else { return }
                    self.recordingDuration = recorder.currentTime
                }
                
                // Start level monitoring
                levelTimer = Timer.scheduledTimer(withTimeInterval: 0.05, repeats: true) { [weak self] _ in
                    guard let self = self, let recorder = self.audioRecorder else { return }
                    recorder.updateMeters()
                    let level = recorder.averagePower(forChannel: 0)
                    // Convert dB (-160 to 0) to 0-1 range
                    let normalizedLevel = pow(10, level / 20)
                    self.audioLevel = max(0, min(1, normalizedLevel))
                }
                
                print("‚úÖ [AudioRecorder] Recording started successfully")
                return url
            } else {
                print("‚ùå [AudioRecorder] Failed to start recording")
                error = "Failed to start recording"
                return nil
            }
        } catch {
            print("‚ùå [AudioRecorder] Recording error: \(error.localizedDescription)")
            self.error = error.localizedDescription
            return nil
        }
    }
    
    func stopRecording() -> URL? {
        print("‚èπÔ∏è [AudioRecorder] Stopping recording...")
        
        recordingTimer?.invalidate()
        levelTimer?.invalidate()
        audioRecorder?.stop()
        
        isRecording = false
        audioLevel = 0.0
        
        let url = recordingURL
        recordingURL = nil
        
        if let url = url, FileManager.default.fileExists(atPath: url.path) {
            if let attrs = try? FileManager.default.attributesOfItem(atPath: url.path),
               let size = attrs[.size] as? Int64 {
                print("‚úÖ [AudioRecorder] Recording saved: \(url.lastPathComponent) (\(size) bytes, \(String(format: "%.1f", recordingDuration))s)")
            }
            return url
        } else {
            print("‚ùå [AudioRecorder] Recording file not found")
            return nil
        }
    }
    
    func cancelRecording() {
        print("üóëÔ∏è [AudioRecorder] Cancelling recording...")
        
        recordingTimer?.invalidate()
        levelTimer?.invalidate()
        audioRecorder?.stop()
        
        if let url = recordingURL {
            try? FileManager.default.removeItem(at: url)
            print("üóëÔ∏è [AudioRecorder] Deleted recording file")
        }
        
        isRecording = false
        recordingURL = nil
        audioLevel = 0.0
    }
}

// MARK: - AVAudioRecorderDelegate
extension AudioRecorder: AVAudioRecorderDelegate {
    func audioRecorderDidFinishRecording(_ recorder: AVAudioRecorder, successfully flag: Bool) {
        print("üé§ [AudioRecorder] Recording finished. Success: \(flag)")
        if !flag {
            error = "Recording failed"
        }
    }
    
    func audioRecorderEncodeErrorDidOccur(_ recorder: AVAudioRecorder, error: Error?) {
        print("‚ùå [AudioRecorder] Encoding error: \(error?.localizedDescription ?? "unknown")")
        self.error = error?.localizedDescription
    }
}

